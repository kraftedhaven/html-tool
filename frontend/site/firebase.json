{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/neuralSuggest",
        "function": "neuralSuggest"
      },
      {
        "source": "/api/ebayComps",
        "function": "ebayComps"
      },
      {
        "source": "/api/createListing",
        "function": "createListing"
      },
      {
        "source": "/api/uploadEbayImage",
        "function": "uploadEbayImage"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
